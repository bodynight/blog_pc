<h1><%= t('contacts.contact_us') %></h1>

<%= form_for :contact, url: contacts_path do |f| %>
<% if @contact && @contact.errors.any? %>
  <p>
    <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li> <%= msg %></li>

      <% end %>
    </ul>
  </p>
<% end %>

  <p>
    <%= f.label :email, class: "form-label" %> <br />
    <%= f.text_field :email, class: "form-control form-control-sm" %>
  </p>

  <p>
    <%= f.label :message, class: "form-label" %> <br />
    <%= f.text_area :message, class: "form-control form-control-sm" %>
  </p>

  <%= f.submit 'Send Message', class: "btn btn-primary" %>

<%  end %>
